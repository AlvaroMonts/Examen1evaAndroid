<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.examen.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Examen Android"
        android:ems="10"
        android:id="@+id/editText"
        android:enabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.examen.LoginFragment"
        android:id="@+id/fragment2"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.examen.RegistroFragment"
        android:id="@+id/fragment"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        tools:layout="@layout/fragment_registro" />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.examen.Fragment1"
        android:id="@+id/fragment3"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        tools:layout="@layout/fragment_fragment1" />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.examen.Fragment2"
        android:id="@+id/fragment4"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        tools:layout="@layout/fragment_fragment2" />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.examen.Fragment3"
        android:id="@+id/fragment5"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        tools:layout="@layout/fragment_fragment3" />
</RelativeLayout>
